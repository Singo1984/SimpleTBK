{
	"name": "SimpleTBK",
	"version": "1.0",
	"description": "Simple Taobaoke",
	"background": {
        "scripts": [ "js/jquery.min.js", "js/bg.js" ]
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "img/qiaoba19.png",
        "default_popup": "html/popup.html"
    },
	"content_scripts": [
	    {
            "js": [ "js/jquery.min.js", "js/tbk.js" ],
            "matches": [ "http://*/*" ]
	    } 
	],
	"permissions": [
		"tabs", 
		"http://*/*", 
		"storage", 
		"notifications",
		"cookies",
		"https://*/*"
	],
	"manifest_version": 2
}
